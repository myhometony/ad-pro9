<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>

      <!--↓local:false,remote:true,pathの変更で行けました！-->
      
      <%= form_with url: user_post_search_path(@user),local:false, remote: true, method: :get do |f| %>
        <%= f.date_field :created_at %>　<!--このフィールドで年/月/日が表示されます-->
        <%= f.submit '検索', class: 'btn btn-primary'  %>
      <% end %>
      <div id="search_result"> <!--これでjsファイルを呼び出します-->
        <% if @search_book.present? %>
          <%= render 'post-search', search_book: @search_book %>　<!--検索結果を部分テンプレート化しています-->
        <% end %>
      </div>

      <%= render "post-chart", user: @user %>

      <%= render "post-table" %>

    </div>

  </div>
</div>
